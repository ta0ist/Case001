											<th>状态</th>
											<th>开始时间</th>
											<th>结束时间</th>
										</tr>
									</thead>
									<tbody >
										<tr ng-repeat='status in statuslist'>
											<td>{{status.Name}}</td>
											<td>{{status.StatusName}}</td>
											<td>{{status.Starttime}}</td>
                                            <td>{{status.EndTime}}</td>
										</tr>
									
									</tbody>
								</table>							
							</div>
						</div>
					</div>				
				</div>
			</div>
		  </div>
		</div> 
</div> 

